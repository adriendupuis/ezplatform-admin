{% extends "@ezdesign/ui/layout.html.twig" %}

{% trans_default_domain 'ad_admin_content_usage' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('ad-admin-content-usage-css', null, 'ezplatform') }}
{% endblock %}

{% block breadcrumbs %}
    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'main__content__content_usage'|trans|desc('Usage') }
    ]} %}
{% endblock %}

{% block page_title %}
    {% include '@ezdesign/ui/page_title.html.twig' with {
        title: 'content_usage'|trans|desc('Content Usage'),
        icon_name: 'information'
    } %}
{% endblock %}

{% block content %}
    {{ ez_render_component_group('ad-admin-content-usage-tab-groups') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('ad-admin-content-usage-js', null, 'ezplatform') }}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'ad_admin_content_usage' }) }}"></script>
{% endblock %}
